{% extends "base.html.twig" %}

{% block title %}Contactez-nous{% endblock title %}

{% block body %}
<div class="container my-4">
    <div class="row">
        <h1 class="col-12 col-lg-8 offset-lg-2 mb-4 style_title bg-white text-center p-4 comic_case">Nous Contacter</h1>

        {% if success is defined %}
        <div class="pt-2">
            <p class="alert alert-success col-12 text-center"> Votre message a bien été envoyé! </p>
        </div>
        {% else %}
        <div class="col-lg-6 offset-lg-3 bg-light p-4 comic_case">
            <form class="form-horizontal comic_text" action="{{ path('contact') }}" method="POST">
                <fieldset>
                    <!-- Email input-->
                    <div class="form-group">
                        <label for="email"> Votre email*: </label>
                            <input id="email" name="email" type="text" placeholder="Email" class="form-control">
                        {% if errorsList.invalidEmail is defined %}
                        <div class="col-12 pt-1">
                            <p class="alert alert-danger col-12 text-center">Email invalide</p>
                        </div>
                        {% endif %}
                    </div>
                    <!-- Sujet input-->
                    <div class="form-group">
                        <label class="control-label" for="name"> Sujet du message*: </label>
                            <input name="subject" type="text" placeholder="Objet" class="form-control">
                        {% if errorsList.invalidSubject is defined %}
                        <div class="col-12 pt-1">
                            <p class="alert alert-danger col-12 text-center">Sujet invalide, (Sujet compris entre 2 et
                                100 caractères, les caractères spéciaux sont interdits! ) </p>
                        </div>
                        {% endif %}
                    </div>
                    <!-- Message body -->
                    <div class="form-group">
                        <label class="control-label" for="content"> Votre message*: </label>
                            <textarea class="form-control" id="content" name="content"
                                placeholder="Entrez votre message..." rows="5"></textarea>
                        {% if errorsList.invalidContent is defined %}
                        <div class="col-12 pt-1">
                            <p class="alert alert-danger col-12 text-center">Contenu invalide, (Contenu compris entre 2
                                et 500 caractères, les caractères spéciaux sont interdits! ) </p>
                        </div>
                        {% endif %}
                    </div>
                    <!-- Form actions -->
                    <div class="form-group">
                        <div class="col-md-12 text-right text-center">
                            <button type="submit" class="btn btn-success btn-lg"> Envoyer </button>
                        </div>
                    </div>
                    {% endif %}
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock body %}