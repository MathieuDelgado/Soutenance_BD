{% extends "base.html.twig" %}

{% block title %} {% endblock %}

{% block body %}


<!-- <p class="alert alert-danger col-12">BD inexistante !</p> -->


<h1 class="text-center"> {{ book.getTitle() }} </h1>
<h2 class="text-center"> {{ book.getAuthor() }} - {{ book.getIllustrator() }} - {{ book.getEditor() }} </h2>


<div class="container">
    <article class="row AfficheUneBD_article">
        <div class="col-lg-4 px-0">
            <!-- PB l'image ne se colle pas dans l'espace à droite quand on est en talle sm, malgré mon mx-auto... -->
            <div class="row col-md-10 offset-1 ">
                <img src="{{book.getImgUrl()}}" class="affichageUneBD col-12 pt-3" alt="Jaquette"
                    title="nom_de_la_BD" />
                <button type="button" class="btn btn-secondary btn-lg col-7 mx-auto my-4 ">Ajouter à ma
                    bibliothèque</button>
            </div>
        </div>
        <div class="col-lg-8 ">
            <div>
                <p class="profil_p my-3"> {{ book.getSynopsis() }} </p>
            </div>
        </div>
        <hr>
    </article>
</div>
<!-- fin de l'article -->







<!-- partie commentaire -->

<div class="container ">
    {% for comment in comments %}
    <div class="row">
        <div class="mt-2">
            <div class="row AfficheUneBD_avis mt-4">
                <div class="col-lg-2">
                    <div class="row mx-auto">
                        <i class="fas fa-user fa-5x col-12 pt-4 ml-3 "></i>
                    </div>
                </div>
                <p class="col-lg-9 my-3">

                    {{ comment.content }}

                </p>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}