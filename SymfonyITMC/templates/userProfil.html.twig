{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock  %}

{% block body %}

<main class="container-fluid my-4">
    <div class="row">
            <h1 class="col-12 col-lg-8 offset-lg-2 mb-4 style_title bg-white text-center p-4 comic_case"> Profil : Mes BD </h1>
        <nav class="col-lg-8 offset-lg-2 navbar navbar-expand-lg nav_bar_library comic_case bg-white comic_text">
            
            <ul class="nav mx-auto nav_text_size">
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByLast')}}">Dernier ajout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByTitle')}}">Par titre</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByAuthor')}}">Par auteurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByEditor')}}">Par éditeurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#">Par genres</a>
                </li>
            </ul>
        </nav>
    </div>

    <aside class="Profil_Aside my-3 mt-5 ml-lg-5 col-lg-3 col-12">
        <div class="row">
            <!-- PB les deux boutons ne sont pas sur la même ligne pour les petite taille xs is sontsuperposés , malgré mon col-xs-5... Pourtant cela fonctionne avec le md -->
            <a href="{{ path('addComic') }}"><button style="width:175px" type="button"
                class="btn btn-secondary my-1 mx-auto Profil_button col-lg-9 col-md-5 col-sm-5 col-xs-5 "><i
                class="fas fa-plus-circle"></i> Ajouter une
                BD</button></a>
            <a href="{{ path('editProfil')}}"> <button style="width:175px" type="button"
                    class="btn btn-secondary my-1 mx-auto Profil_button col-lg-9 col-md-5 col-sm-5 col-xs-5"><i
                    class="fas fa-user-edit"></i> Editer
                    profil</button></a>
                </div>
            </aside>
    
    <div class="row mt-4 offset-lg-1" id="lienTitleAlphC">
        {% for book in user.books %}
        <div class="col-md-2 m-2 py-3 comic_case bg-white">
            <a href="{{ path('displayOneBD', {titleBook : book.title}) }}">
                <img src=" {{book.getImgUrl()}}" class="img-fluid" alt="{{book.title}}">
            </a>
                        <div class="m-2 comic_text">
                            <p> {{book.title}} </p>
                            <p>{{book.author}}</p>
                            <p>{{book.editor}}</p>
                            <p>Note :
                                <span class="ml-4">
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                            </p>
                        </div>
                </div> 
            {% endfor %}     
        </div>
</main>
        

{% endblock body %}