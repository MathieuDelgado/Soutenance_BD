{% extends "base.html.twig" %}

{% block title %}Mon profil{% endblock  %}

{% block body %}

<main class="container-fluid my-4 comic_text">
    <div class="row">
            <h1 class="col-12 col-lg-8 offset-lg-2 mb-4 style_title bg-white text-center p-4 comic_case"> Profil : Mes BD </h1>
        <nav class="col-lg-8 offset-lg-2 navbar navbar-expand-lg nav_bar_library comic_case bg-white">
            
            <ul class="nav mx-auto nav_text_size">
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByLast')}}">Dernier ajout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByTitle')}}">Par titre</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByAuthor')}}">Par auteurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="{{path('bdbddByEditor')}}">Par éditeurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="#">Par genres</a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2 my-4 p-0">
            <div class="p-4 comic_case bg-white">
                <p>Désolé... Cette section est encore en construction.</p>
            </div>
        </div>
        <div class="col-md-6 offset-md-3">
            <img class="comic_case img-fluid" src="{{asset('img/building.jpg')}}" alt="en construction">
        </div>
    </div>

    </div>
    
    <div class="row mt-4 offset-lg-1" id="lienTitleAlphC">
        {% for book in books %}
        <div class="col-md-2 m-2 py-3 comic_case bg-white">
            <a href="{{ path('displayOneBD', {titleBook : book.title}) }}">
                <img src=" {{book.getImgUrl()}}" class="img-fluid" alt="{{book.title}}">
            </a>
                        <div class="m-2 comic_text">
                            <p> {{book.title}} </p>
                            <p>{{book.author}}</p>
                            <p>{{book.editor}}</p>
                            <p>Note :
                                <span class="ml-4">
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </span>
                            </p>
                        </div>
                </div> 
            {% endfor %}     
        </div>
</main>
        

{% endblock body %}